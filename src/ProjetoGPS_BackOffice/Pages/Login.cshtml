@page
@model ProjetoGPS_BackOffice.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div>
	<div class="d-flex justify-content-center">
		<div class="card" style="width: 25%; padding: 10px; margin-top: 20px">
			<!-- Content section 1 -->
			<form method="post" class="form">
				<h2>Admin Login</h2>
				<div class="form-group" style="margin-top: 10%">
					<input type="text" class="form-control" name="username" placeholder="Username">
				</div>

				<div class="form-group">
					<input type="password" class="form-control" name="password" placeholder="Password">
				</div>

				<button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 5%" asp-page-handler="Login">Login</button>
			</form>
		</div>
	</div>
</div>
