<!DOCTYPE html>

<html>
<head runat="server">
	<title>@ViewData["Title"] - BrightStart Admin</title>
	<link type="text/css" rel="stylesheet" href="~/lib/bootstrap/bootstrap.css" />
	<style>
		.margin {
			margin-left: 1%;
			margin-right: 1%;
			margin-top: 1%;
		}
	</style>
</head>

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/bootstrap/bootstrap.js"></script>

<body style="background-color: #2f3439; padding-top: 56px">
	<div>
		<!-- NAV START -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
			<a class="navbar-brand" style="margin-left: 1%" href="#">
				<img src="~/img/brightstart.png" width="30" height="28" class="d-inline-block align-top" alt="" />
				BrightStart Admin
			</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarText">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" href="/Index">📝 Candidaturas</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Definicoes">⚙️ Definições</a>
					</li>
				</ul>
			</div>
		</nav>
		<!-- NAV END -->
		<div style="margin-left: 10%; margin-right: 10%; background-color: #fff; padding-bottom: 1%">
			@RenderBody()
		</div>
	</div>
</body>
</html>


@if (ViewData["alert"] != null)
{
	<script type="text/javascript">
		window.onload = function () {
			alert("@ViewData["alert"]");
		};
	</script>
}